<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pw.victor.parkingcronsample.fragments.ButtonsFragment"
    android:orientation="vertical"
    android:id="@+id/layoutButtons"
    android:gravity="center">

    <Button
        android:layout_marginTop="40dp"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="00:02:00"
        android:text="1/4 E"
        android:id="@+id/btn1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="15 min"
        android:id="@+id/textView5"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginLeft="@dimen/margin_left_label"
        />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="00:30:00"
        android:text="1/2 E"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30 min"
        android:id="@+id/textView6"
        android:layout_below="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:layout_marginLeft="@dimen/margin_left_label"
        />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="01:00:00"
        android:text="1E"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="02:00:00"
        android:text="2E"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

    <Button

        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:layout_marginTop="30dp"
        android:tag="03:00:00"
        android:text="3E"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="04:00:00"
        android:text="4E"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="05:00:00"
        android:text="5E"
        android:id="@+id/btn7"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn6" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:tag="06:00:00"
        android:text="6E"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Escolha o tempo de estacionamento"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1 hora"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2 horas"
        android:id="@+id/textView8"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn3"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3 horas"
        android:id="@+id/textView9"
        android:layout_below="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4 horas"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/btn5"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5 horas"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/btn6"
        android:layout_marginLeft="@dimen/margin_left_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="6 horas"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/btn7"
        android:layout_marginLeft="@dimen/margin_left_label"/>

</RelativeLayout>
