<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PainelActivity"
    >

    <TextClock
        android:layout_marginTop="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:format24Hour="HH:mm:ss"
        android:textSize="@dimen/top_text_size"
        android:layout_marginStart="67dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\@"
        android:id="@+id/textView2"
        android:textSize="@dimen/top_text_size"
        android:layout_above="@+id/dynFrm"
        android:layout_alignStart="@+id/dynFrm"
        android:layout_marginStart="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" em..."
        android:id="@+id/txtTimeSelected"
        android:layout_above="@+id/dynFrm"
        android:layout_toEndOf="@+id/textClock"
        android:textSize="@dimen/top_text_size"/>


    <RelativeLayout
        android:id="@+id/dynFrm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true"></RelativeLayout>

</RelativeLayout>
